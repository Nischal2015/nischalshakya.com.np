---
import { Icon } from 'astro-icon';
import Close from '../../icons/close.astro';
import IconButton from '../atoms/icon-button.astro';
import SocialCollection from './social-collection.astro';
---

<nav
  class='hidden lg:hidden flex-col gap-4 fixed inset-[0] translate-x-full z-50 bg-white'
  id='mob_nav'
>
  <div class='flex items-center ps-1 pe-[calc(4vw+0.2rem)] py-[1.8rem]'>
    <a href='/' aria-label='Portfolio logo'>
      <Icon name='full-logo' class='w-[192px] h-auto' />
    </a>
    <IconButton
      class='-translate-y-[4px] -translate-x-[10px] ml-auto'
      label='Close menu'
      id='close-button'
    >
      <Close />
    </IconButton>
  </div>

  <nav class='ps-[3.2rem] pe-[3.2rem]'>
    <ul
      class='flex flex-col gap-3 text-headline-medium font-montserrat font-medium'
    >
      <li><a href='/'>Home</a></li>
      <li><a href='/about'>About</a></li>
      <li><a href='/projects'>Projects</a></li>
      <li><a href='/articles'>Articles</a></li>
    </ul>
  </nav>

  <div class='flex items-center justify-center gap-3 p-4 mt-auto social'>
    <SocialCollection className='h-[4rem] w-[4rem]' />
  </div>
</nav>

<style>
  .slide-in--right {
    animation: slide-in--right 0.4s cubic-bezier(0.55, 0, 0.15, 1);
  }
  .slide-out--left {
    animation: slide-out--left 0.4s cubic-bezier(0.55, 0, 0.15, 1);
  }
  .social {
    box-shadow: 0 -4px 32px 0px rgba(0, 0, 0, 0.1);
  }
  @keyframes slide-in--right {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(0);
    }
  }
  @keyframes slide-out--left {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(100%);
    }
  }
</style>
