---
import { Picture } from "astro-imagetools/components";

interface Props {
  image: string;
  summary: string;
  title: string;
  altText: string;
}

const {image, summary, title, altText} = Astro.props as Props;
---

<div class="project">
  <div class="rounded-[2.4rem] image-container overflow-hidden">
    <Picture src={image} alt={altText} />
  </div>
  <h3 class="text-title-large h3">{title}</h3>
  <p class="text-body-large">{summary}</p>
</div>

<style>
  .image-container {
    margin-block-end: 2.4rem;
  }
  .h3 {
    margin-block-end: 1.2rem;
  }
</style>