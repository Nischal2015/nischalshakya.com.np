---
import MetaSeo from '../components/common/meta-seo.astro';
import type { MetaSeo as MetaSeoProps } from '../types';
import '../styles/global.css';

interface Props {
  meta: MetaSeoProps;
  className?: string;
}

const { meta, className = '' } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <MetaSeo {...meta} />
  </head>
  <body class={className}>
    <slot />
  </body>
</html>
