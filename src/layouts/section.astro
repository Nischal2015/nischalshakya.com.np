---
interface Props {
  py?: number;
  bg: string;
  class?: string;
}

const { py, bg, class: className } = Astro.props as Props;
const paddingBlock = py ? `${py}rem` : '9.6rem';
---

<section class={`${bg} section ${className}`}>
  <div class='containers m-auto'>
    <slot />
  </div>
</section>

<style define:vars={{ paddingBlock }}>
  .section {
    padding-block: var(--paddingBlock);
  }
  .containers {
    padding-inline: 4vw;
    max-width: 153.6rem;
  }
  @media (min-width: 153.6rem) {
    .containers {
      padding-inline: 0;
    }
  }
</style>
